# RelayPACS Production Environment Template
# Copy this to .env and fill in the values

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-random-secret-key-here

# Database
POSTGRES_USER=relaypacs
POSTGRES_PASSWORD=your-secure-db-password-here
DATABASE_URL=postgresql+psycopg2://relaypacs:${POSTGRES_PASSWORD}@postgres:5432/relaypacs

# S3 Storage (MinIO)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=secure-minio-password
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=secure-minio-password

# PACS Credentials
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# App Settings
DEBUG=false
ALLOWED_HOSTS=your-production-domain.com,api.your-production-domain.com
CORS_ORIGINS=["https://your-production-domain.com"]
